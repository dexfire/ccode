// https://code.visualstudio.com/docs/editor/tasks
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "clang++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}.exe",
                "-g",
                "-Wall",
                "-working-directory ${fileDirname}",
                "-static-libgcc",
                "-fcolor-diagnostics",
                "--target=x86_64-w64-mingw32",
                "-std=c++17",
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run",
            "command": "./build/${fileBasenameNoExtension}.exe",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
        }
    ]
}